generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Artwork {
  id              String   @id @default(cuid())
  title           String
  sizeDescription String?
  imageUrl        String
  sold            Boolean  @default(false)
  order           Int      @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
